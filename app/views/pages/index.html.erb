<div class="top-hero-wrapper text-center">
  <div class="container top-hero-container">
    <h1 class="text-white">料理サイト</h1>
    <h3 class="text-white">新しい投稿</h3>
<!--ここから-->

    <div style="height:350px; overflow-x:auto">
        <div calss="topic-index-single">
        <% @topics.each do |topic| %>
        <h4 class="text-white">料理名「<%=topic.title%>」</h4>
        <p><%= image_tag topic.image.url %></p>
        <% end %>
         </div>
         <% if logged_in? %>
          <div class="row">
          <div class="col-md-offset-5 col-md-2">
          <%= link_to 'もっと見る', topics_path, class: 'btn btn-block btn-white' %>
          </div> 
        </div>
        <% end %>
     </div>   
<!--ここまで-->
    <% if logged_in? %>
      <% else %>
          <div class="row">
            <div class="col-md-offset-3 col-md-3">
              <%= link_to 'Sign in', new_user_path, class: 'btn btn-block btn-white' %>
            </div>
            <div class="col-md-3">
              <%= link_to 'Log in', login_path, class: 'btn btn-block btn-white' %>
            </div>
          </div>
    <% end %>
      </div>
</div>