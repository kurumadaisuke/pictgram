
<div class="topic-index-wrapper">
    <div class="container">
        <div class="row">
            <div class="well">
                <h2>詳細ページ</h2>
                <p>投稿者「<%= @topic.user.name %>」</p>
                <p> 料理名「<%=@topic.title%>」</p>
                <p>業態「<%=@topic.subject%>」</p>
                
                <!--<p>材料名<span class="material">(<%#=@topic.material%>) </span></p>-->
                
                <!--<p>グラム<span class="material">(<%#=@topic.gram%>)g</span> </p>-->
                 
                 <table class="table table-bordered">
                      <thead>
                         <tr>
                          <th scope="col">材料名</th>
                          <th scope="col">グラム</th>
                          <th scope="col">合計</th>
                        </tr> 
                    　</thead>
                      <tbody>
                          <tr>
                            <% @ary_materi.each do |materia| %>
                            <td><%= materia %></td>
                            <% end %>
                            </tr>
                        <tr>
                            <% @ary_gram.each do |gram| %>
                            <td><%= gram %></td>
                            <% end %>
                        </tr>
                      </tbody>
                </table>
                    
                <p><%= image_tag @topic.image.url%></p>
            </div>    
        </div>
    </div>
</div>