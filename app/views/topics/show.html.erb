
<div class="topic-index-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="topic-index-single">
                    <div class="well">
                        <h2>材料ページ</h2>
                        <p>投稿者「<%= @topic.user.name %>」</p>
                        <p> 料理名「<%=@topic.title%>」</p>
                        <p>業態「<%=@topic.subject%>」</p>
                        
                        <!--追加-->
                    
                            
                        <h3>人数計算</h3>
                            <div id="request_ajax_update" >
                                <%= form_tag(ajax_gram_topics_path, method: :post, remote: true) { %>
                                  <%= hidden_field_tag :topic_id, @topic.id %>
                                  <%= text_field_tag :ninnzuu, nil, placeholder: '例  ○○人分' %>
                                  <%= submit_tag "計算"  %>
                                  <% } %>
                            </div>   
                            
                        <!--追加-->
                        <div id="gram_hyouzi">
                             <table class="table table-bordered">
                                  <thead>
                                     <tr>
                                      <th scope="col">材料名</th>
                                      <th scope="col">グラム</th>
                                      <th scope="col">人数分</th>
                                    </tr> 
                                　</thead>
                                　
                                  <tbody>
                                        <% @topic.materials.each do | m |%>
                                          <tr>
                                            <td><%= m.material %></td>
                                            <td><%= m.gram %></td>
                                            <td></td>
                                          </tr>
                                        <% end %>
                                    
                                  </tbody>
                            </table>
                        </div>
                            <div class="pages">
                            <p ><%= image_tag @topic.image.url %></p>
                            </div>
                     </div>      
                </div>
            </div>    
        </div>
    </div>
</div>
