<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">投稿画面</h1>
        
        <%= form_with model: @topic, local: true do |f| %>
        
          <%= f.hidden_field :user_id, value: @topic.user_id %>
          
          <div class="form-group">
            <%= f.label :料理名 %>
            <%= f.text_area :title, class: 'form-control' , size: "1x1"%>
          </div>
          
          <div class="form-group">
            <%= f.label :写真 %>
            <%= f.file_field :image%>
          </div>
          
          <div class="form-group">
            <%= f.label :業態 %>
            <p><%= f.select :subject, [["病院","病院"],
                                    ["保育園","保育園"],
                                    ["食堂","食堂"],
                                    ["レストラン","レストラン"],
                                    ["福祉施設","福祉施設"]],
                                    class: 'form-control' %>
            </p>
          </div>
          
          <!--材料-->
                  
                <div id="input_pluralBox">
                   <div class="input_plural">
                      <div style="display:inline-flex">
                        <%= f.fields_for :materials do |m| %>
                          <%= render "material_fields", f: m %>
                        <% end %> 
                          <%= link_to_add_association "＋", f, :materials ,class: 'btn btn-default' %>
                      </div>
                      
                      
                    </div>
                  
                </div>
          <!--材料-->
          <div class="form-group">
            <%= f.label :作り方 %>
            <%= f.text_area :description, class: 'form-control', size: "1x5"%>
          </div>
          
          <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% end %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>